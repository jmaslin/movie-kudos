{
  "compilerOptions": {
    "outDir": "./lambda/custom",
    "module": "commonjs",
    "target": "es6",
    "lib": [ "es6", "dom" ],
    "moduleResolution": "node",
    "rootDir": "./",
    "sourceMap": true,
    "allowJs": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "forceConsistentCasingInFileNames": true
  },
  "rootDir": "src/",
  "exclude": [
     "node_modules",
     "test",
     "coverage",
     "lambda",
     "dist",
     "webpack.config.js"
   ],
   "types": [ "typePatches" ]
}
